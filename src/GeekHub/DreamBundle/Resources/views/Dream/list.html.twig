{% for dream in dreams %}
    {% if loop.index is divisible by(3) %}
        <div class="row">
    {% endif %}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{ dream.mainImage.path | imagine_filter('dream_list') }}" alt="" class="img-rounded">
                <div class="clearfix"></div>
                <div class="col-md-3">
                    <img src="{{ dream.owner.profilePicture.path | imagine_filter('user_avatar_small') }}" alt="" class="img-circle">
                </div>
                <div class="col-md-9">
                   {{ dream.owner.name }}
                </div>
                <div class="clearfix"></div>
                <div class="caption">
                    <h3>{{ dream.title }}</h3>
                    <p>...</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>
            </div>
        </div>
    {% if loop.index is divisible by(3) %}
        </div>
    {% endif %}
{% endfor %}